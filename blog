    <!-- Shader Background -->
    <div class="shader-bg">
        <media-shader width="100%" height="100%" fragment-shader="#version 300 es
        precision highp float; out vec4 glFragColor; uniform vec2 u_resolution; uniform float u_time; uniform vec4 u_colors[2]; uniform float u_intensity; uniform float u_rays; uniform float u_reach;
        float rayStrength(vec2 raySource, vec2 rayRefDirection, vec2 coord, float seedA, float seedB, float speed){
            vec2 sourceToCoord = coord - raySource; float cosAngle = dot(normalize(sourceToCoord), rayRefDirection);
            return clamp((.45 + 0.15 * sin(cosAngle * seedA + u_time * speed)) + (0.3 + 0.2 * cos(-cosAngle * seedB + u_time * speed)), u_reach, 1.0) * clamp((u_resolution.x - length(sourceToCoord)) / u_resolution.x, u_reach, 1.0);
        }
        void main(){
            vec2 uv = gl_FragCoord.xy / u_resolution.xy; uv.y = 1.0 - uv.y; vec2 coord = vec2(gl_FragCoord.x, u_resolution.y - gl_FragCoord.y); float speed = u_rays * 10.0;
            vec2 rayPos1 = vec2(u_resolution.x * 0.7, u_resolution.y * -0.4); vec2 rayRefDir1 = normalize(vec2(1.0, -0.116));
            vec2 rayPos2 = vec2(u_resolution.x * 0.8, u_resolution.y * -0.6); vec2 rayRefDir2 = normalize(vec2(1.0, 0.241));
            vec4 rays1 = vec4(0.,0.,0., .0) + rayStrength(rayPos1, rayRefDir1, coord, 36.22*speed, 21.11*speed, 1.5*speed) * u_colors[0];
            vec4 rays2 = vec4(0.,0.,0., .0) + rayStrength(rayPos2, rayRefDir2, coord, 22.39*speed, 18.02*speed, 1.1*speed) * u_colors[1];
            glFragColor = (rays1 + rays2) * (1.0*u_reach - (coord.y / u_resolution.y) + (0.5+ u_intensity));
        }" uniforms='{"u_colors":[[0.5098039215686274,0.615686274509804,0.9450980392156862,1],[0.6431372549019608,0.7215686274509804,0.9568627450980393,1]],"u_intensity":0.7,"u_rays":0.015,"u_reach":0.2}'>
        </media-shader>
    </div>

